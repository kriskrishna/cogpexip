{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "artifacts/api",
    "rootDir": "api",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  },
  "filesGlob": [
    "typings/index.d.ts",
    "api/**/*.ts",
    "config/**/*.ts",
    "config/**/*.json"
  ],
  "types": [
  ],
  "exclude": [
    "node_modules",
    "typings"
  ],
  "compileOnSave": false
}